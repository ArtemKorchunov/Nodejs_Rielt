<% layout('../../../layouts/user/control-panel/medium/addPattern')%>
<form id="req-form">
    <% ColumnName.forEach(function (value) {%>
    <div class="form-group row justify-content-center">
        <label for="recipient-name" class="col-2 col-form-label"><%-value%>: </label>
        <input type="text" class="offset-1 offset-sm-0 col-7 form-control" id="recipient-name">
    </div>
    <% }) %>
    <div class="form-group row justify-content-center">
        <label for="recipient-name" class="col-2 col-form-label">Customer: </label>
        <select name="cust passportid" class="offset-1 offset-sm-0 col-7 custom-select " id="owner-select">
            <option value="" selected>Choose customer.</option>
            <% Customers.forEach(function (customer) {%>
            <option value="<%= customer.passportid %>" selected><%= customer.name + " " + customer.surname + " " + customer.last_name %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group row justify-content-center">
        <label for="recipient-name" class="col-2 col-form-label">Flat: </label>
        <select name="flat id" class="offset-1 offset-sm-0 col-7 custom-select " id="owner-select">
            <option value="" selected>Choose flat.</option>
            <% Flats.forEach(function (flat) {%>
            <option value="<%= flat.flat_id %>" selected><%= 'City:' + flat.city + ", Street:" + flat.street + ", Flat:" + flat.flat %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group row justify-content-center">
        <label for="recipient-name" class="col-2 col-form-label">Agent: </label>
        <select name="profile id" class="offset-1 offset-sm-0 col-7 custom-select " id="owner-select">
            <option value="" selected>Choose agent.</option>
            <% Profiles.forEach(function (profile) {%>
            <option value="<%= profile.user_username %>" selected><%= profile.name + " " + profile.surname + " " + profile.last_name %></option>
            <% }) %>
        </select>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Create flat</button>
    </div>
</form>
