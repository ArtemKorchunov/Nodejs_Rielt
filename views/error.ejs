<% layout('layouts/page')%>
<% stylesheet('/css/login.css') %>
<style>
    .alert {
        max-width: 50rem;
        margin: 0 auto;
    }
</style>
<div class="container">
    <% if (error.status == "404") {%>
    <div class="alert alert-warning" role="alert">
        <h3 class="alert-heading"><%= message %></h3>
        <h2><strong><%= error.status %></strong></h2>
    </div>
    <% } else { %>
    <div class="alert alert-danger" role="alert">
        <h3 class="alert-heading"><%= message %></h3>
        <h2><strong><%= error.status %></strong></h2>
    </div>
    <% }%>
    <h1></h1>

</div>
